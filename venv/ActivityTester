import ActivityWriter
import shutil

activity = \
    {
        'Activity Identifier': 'Test activity',
        'instruction.sound': 'tap_learn_instruction.ogg',
        'images.layout': [[{'image': 'blue-sheet1.png'}, {'image': 'red-sheet2.png'}, {'image': 'yellow-sheet0.png'}], [{'image': 'ron-sheet1.png'}, {'image': 'sqa-sheet1.png'}, {'image': 'tran-sheet1.png'}]]
    }

def tap_learn_test():
    shutil.rmtree(activity['Activity Identifier'], ignore_errors=True)
    activity_writer = ActivityWriter.ActivityWriter()
    activity_writer.write_tap_listen(activity['Activity Identifier'], activity)

tap_learn_test()
